@model ManyToManyCore.Models.Project
@{
    ViewData["Title"] = "ProjectCreate";
    Layout = "_Layout";
}

    <form asp-action="Insert" method="post" class="p-2">
        <!--
        <div class="m-1 p-1">
        <input type="hidden" name="id" value="Model.Id" />-->

        <h4>Nowy projekt</h4>
        <div class="p-1">
            <div class="row">
                <div class="col"><strong>Name</strong></div>
            </div>
            <div class="row">
                <div class="col">
                    <input asp-for="@Model.Name" />
                </div>
            </div>
            <div class="row">
                <div class="col"><strong>Data </strong></div>
            </div>
            <div class="row">
                <div class="col">
                    <input asp-for="@Model.Date" />
                </div>
            </div>
        </div>

        @foreach (var item in ViewBag.Students)
        {
            <div class="form-row">
                <div class="form-group col-1">
                    <input type="checkbox" name="checkbox" value="@item.Id" />
                </div>
                <div class="form-group col">
                    <label class="form-control-label">@item.LastName</label>
                </div>
            </div>
        }
        <br><br>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
